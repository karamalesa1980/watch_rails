<!DOCTYPE html>
<html lang="en">
  <head>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %> 
    <%= display_meta_tags title: @page_title, description: @page_description, keywords: @page_keywords %>

    

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %> 

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

  </head>

  <body>
    <!--top header-->
    <%= render 'include/main/top_header' %>
    <!--top header-->

    <!--Notifications-->
    <%= render 'include/main/notifications' %>
    <!--Notifications-->

    <!--start logo -->
    <div class="logo">
      <%= link_to root_path, data: {turbolinks: false} do %>
      <h1> Luxury Watches</h1>
      <% end %>
    </div>
    <!--start logo -->

    <!--bottom-header-->
    <%= render 'include/main/bottom_header' %>
    <!--bottom-header-->


    <div class='content'>
      <%= yield %>
    </div>

    <!--footer-->
    <%= render 'include/main/footer' %>
    <!--footer-->

  </body>
</html>
